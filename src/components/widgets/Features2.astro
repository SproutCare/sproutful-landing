---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';
import ItemGrid2 from '~/components/ui/ItemGrid2.astro';
import type { Features as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 3,
  defaultIcon,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      title: 'text-4xl md:text-5xl font-bold tracking-tight mb-6 font-heading',
      ...((classes?.headline as Record<string, string>) ?? {}),
    }}
  />
  <ItemGrid2
    items={items}
    columns={columns}
    defaultIcon={defaultIcon}
    classes={{
      container:
        'max-w-6xl mx-auto px-4 pt-0 sm:px-8 sm:pt-0 lg:px-12 lg:pt-0 pb-[2.8rem] sm:pb-[4.2rem] lg:pb-[5.6rem] gap-4 md:gap-6',
      panel:
        'w-full rounded-[16px] dark:shadow-[0_4px_30px_rgba(0,0,0,0.1)] backdrop-blur border border-border bg-white dark:bg-slate-900 p-6',
      icon: 'w-14 h-14 mb-6 text-primary',
      ...((classes?.items as Record<string, never>) ?? {}),
    }}
  />
</WidgetWrapper>
