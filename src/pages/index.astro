---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Button from '~/components/ui/Button.astro';
import heroImage from '~/assets/images/indexHero.png';
import TimelineImage from '~/assets/images/timeline.png';
import Content from '~/components/widgets/Content.astro';
const appStoreDownloadLink = 'https://github.com/arthelokyo/astrowind';
const googlePlayDownloadLink = 'https://github.com/arthelokyo/astrowind';
import Download from '~/components/widgets/Download.astro';
const metadata = { title: 'Sproutful — Connected care, simplified', ignoreTitleTemplate: true };
---

<Layout metadata={metadata}>
  <Hero
    id="hero"
    image={{
      src: heroImage,
      alt: 'Sproutful platform for managing support for people with disabilities',
      style: 'object-fit: contain; height:auto; max-height:500px; width:100%;',
    }}
  >
    <Fragment slot="title">Support every day, for every ability.</Fragment>
    <Fragment slot="subtitle">
      Sproutful helps families, carers, and professionals track daily routines, behaviors, medications, meals, and
      milestones for people with disabilities. Stay organized, share updates in real time, and celebrate progress — all
      in one platform.
    </Fragment>
    <div slot="actions" class="flex justify-center gap-4">
      <Button variant="primary" href="/mobile-app">For Families & Carers</Button>
      <Button variant="secondary" href="/saas">For Professionals</Button>
    </div>
  </Hero>

  <Features2
    id="features"
    title="Three ways Sproutful will transform your support network"
    subtitle="Designed specifically for families, carers, and professionals supporting people with disabilities, Sproutful brings everyone together with powerful routines, real-time tracking, and actionable insights."
    columns={3}
    items={[
      {
        title: 'Stay Aligned as a Team',
        description:
          '<b>Collaboration tools</b> help families, support workers, and professionals coordinate daily support for people with disabilities — everyone stays informed and on the same page.',
        icon: 'tabler:affiliate-filled',
        classes: { icon: 'text-blue-600' },
      },
      {
        title: 'Track What Matters Daily',
        description:
          '<b>Routines, behaviors, sleep, food, medications</b> — all managed in one place to simplify care and ensure the wellbeing of your loved one is always monitored.',
        icon: 'tabler:calendar-event-filled',
        classes: { icon: 'text-green-600' },
      },
      {
        title: 'See Progress Over Time',
        description:
          '<b>Insights reveal patterns</b>, improvements, and what works best, helping carers and families celebrate milestones and make data-driven support decisions.',
        icon: 'tabler:graph-filled',
        classes: { icon: 'text-amber-500' },
      },
    ]}
  />

  <Content
    isFramed
    chip={{
      label: 'Mobile App',
      bgClass: 'bg-general-blue',
      textClass: 'text-white',
    }}
    frameIcon={{
      name: 'tabler:device-mobile',
      class: 'w-100 h-100 text-general-blue/20',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: TimelineImage,
      alt: 'Mobile app showing behavior tracking, checklists, and medications',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'Learn more', href: '/mobile-app' }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-semibold tracking-tight dark:text-white mb-5">
        For Families and Carers
      </h3>
      <p class="text-gray-700 dark:text-gray-300">
        <b>Keep track of daily routines, behaviors, medications, and general wellbeing</b> on the go. Designed for families
        and carers to stay organized, log progress, and share updates easily.
      </p>
    </Fragment>
  </Content>

  <Content
    isFramed
    isReversed
    chip={{
      label: 'Desktop Dashboard',
      bgClass: 'bg-behaviour-purple',
      textClass: 'text-white',
    }}
    frameIcon={{
      name: 'tabler:device-desktop',
      class: 'w-100 h-100 text-medication-green/20',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: TimelineImage,
      alt: 'Desktop dashboard showing insights, data, and care network',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'Learn more', href: '/saas' }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-semibold tracking-tight dark:text-white mb-5">
        For Professionals
      </h3>
      <p class="text-gray-700 dark:text-gray-300">
        <b>Review insights, trends, and milestones</b> in one dashboard. Designed for professionals to analyze data, communicate
        with families and carers, and stay in the loop without sifting through stacks of paper.
      </p>
    </Fragment>
  </Content>

  <Testimonials
    title="What our users say?"
    testimonials={[
      {
        testimonial:
          "Sproutful makes it so simple to keep track of my child's daily routines, even when I'm on the go. I love how organized everything is!",
        name: 'Olivia Bennett',
        job: 'Parent',
        image: {
          src: 'https://images.unsplash.com/photo-1524504388940-b1c1722653e1?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Olivia Bennett Image',
        },
      },
      {
        testimonial:
          'The mobile app has been a game-changer for staying on top of medications and checklists. I can log updates instantly and everyone stays in the loop.',
        name: 'Michael Tan',
        job: 'Family Carer',
        image: {
          src: 'https://images.unsplash.com/photo-1535713875002-d1d0cf377fde?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Michael Tan Image',
        },
      },
      {
        testimonial:
          'I appreciate being able to see patterns over time. The insights dashboard helps me understand progress and plan next steps effectively.',
        name: 'Dr. Hannah Lee',
        job: 'Psychologist',
        image: {
          src: 'https://images.unsplash.com/photo-1502767089025-6572583495b2?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Dr. Hannah Lee Image',
        },
      },
    ]}
  />

  <Download
    title="Start seeing progress today"
    columns={2}
    cards={[
      {
        title: 'Mobile App for Families and Carers',
        description:
          'Get Sproutful on your iOS or Android device to track routines, behaviors, and medications — even without a professional involved.',
        icon: 'tabler:device-mobile',
        classes: { icon: 'text-general-blue' },
        buttons: [
          {
            href: appStoreDownloadLink,
            text: 'Download for iOS',
            variant: 'secondary',
            icon: 'tabler:brand-apple',
          },
          {
            href: googlePlayDownloadLink,
            text: 'Download for Android',
            variant: 'secondary',
            icon: 'tabler:brand-android',
          },
        ],
      },
      {
        title: 'Desktop Dashboard for Professionals',
        description:
          'Access your routines, track progress, and see trends — works for families, carers, or solo users.',
        icon: 'tabler:device-desktop',
        classes: { icon: 'text-medication-green' },
        buttons: [
          {
            href: 'https://github.com/arthelokyo/astrowind',
            text: 'Try it in your browser',
            variant: 'secondary',
          },
        ],
      },
    ]}
  />
</Layout>
