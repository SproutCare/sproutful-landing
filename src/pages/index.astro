---
import Layout from '~/layouts/PageLayout.astro';
import Image from '~/components/common/Image.astro';
import landingHero from '~/assets/images/landing-hero.jpg';
import mobileAppImage from '~/assets/images/mobile-app.jpg';
import webAppImage from '~/assets/images/web-app.jpg';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Sproutful — Connected care, simplified',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero id="hero">
    <Fragment slot="title">
      <span class="text-white">Stay in the loop. Stay <span class="text-primary">connected</span>.</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-white"
        >Sproutful bridges the gap between families, therapists, and support teams — so care continues smoothly, even
        when you're apart.</span
      >
    </Fragment>

    <Fragment slot="bg">
      <Image src={landingHero} alt="" class="absolute inset-0 w-full h-full object-cover" />
      <div class="absolute inset-0 bg-black/60"></div>
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Simplifying Care for Everyone"
    subtitle="From checklists to progress tracking, Sproutful keeps families, therapists, and support workers organized, and informed — all in one app built for real-life care."
    items={[
      {
        title: 'Shared Communication',
        description:
          'Instant updates keep families, therapists, and support teams aligned on care plans, progress, and daily tasks — so no one misses a thing.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Professional Collaboration',
        description:
          'Therapists and support staff can monitor activities, track routines, and adjust goals remotely, creating smoother communication and better outcomes.',
        icon: 'tabler:users',
      },
      {
        title: 'Family Peace of Mind',
        description:
          'Families can check in on loved ones, see progress, and celebrate milestones — providing reassurance and visibility wherever they are.',
        icon: 'tabler:heart',
      },
      {
        title: 'Accountability Made Easy',
        description:
          'Daily checklists, reminders, and notes keep every team member accountable, organized, and focused on what matters most: quality care.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Simple, Secure, and Reliable',
        description:
          'All care information is securely stored and accessible only to authorized users, ensuring privacy and trust in every interaction.',
        icon: 'tabler:lock',
      },
      {
        title: 'See progress over time',
        description: 'Insights and visibility into growth and outcomes.',
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Mobile App"
    title="On-the-go care made simple"
    subtitle="Built family-first, Sproutful's mobile app keeps families and support workers connected and accountable — all in one place."
    callToAction={{ text: 'Learn More', href: '/mobile-app' }}
    items={[
      {
        title: 'Ditch the Paper',
        description:
          'Replace messy logs and checklists with digital tracking. Everything is organized in one place, reducing errors and saving time.',
      },

      {
        title: 'Accountability made easy',
        description: 'Checklists, logs, and notes ensure support workers stay organized, transparent, and on track.',
      },
      {
        title: 'Peace of mind anywhere',
        description:
          'Families can monitor loved ones, track progress, and celebrate milestones — all from a single digital platform.',
      },
    ]}
    image={{
      src: mobileAppImage,
      alt: 'Mobile app mockup showing Sproutful checklist screen',
    }}
  >
    <Fragment slot="content">
      Empowering families and carers to stay informed, organized, and connected in real time.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-bg-secondary dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <Content
    tagline="Web Application"
    title="Centralized care management"
    subtitle="Sproutful's web dashboard helps professionals monitor clients, coordinate support teams, and streamline care — all from one secure platform."
    callToAction={{ text: 'Learn More', href: '/saas' }}
    items={[
      {
        title: 'Professional oversight',
        description:
          'Easily view behavior trends, update care goals, and monitor support workers — giving professionals complete visibility over each case.',
      },
      {
        title: 'Collaborative case management',
        description:
          'Share updates, notes, and progress reports instantly across your care network, keeping teams aligned and families informed.',
      },
      {
        title: 'Customizable dashboards',
        description:
          'Tailor views by role or client, making it easy to focus on what matters most — while keeping data secure and organized.',
      },
    ]}
    image={{
      src: webAppImage,
      alt: 'Web dashboard mockup showing client progress and care tracking',
    }}
  >
    <Fragment slot="content">
      Keep your team organized, informed, and in control — streamlining client care and collaboration.
    </Fragment>
  </Content>

