---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = 'https://github.com/arthelokyo/astrowind';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://github.com/arthelokyo/astrowind';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText title="Which Sproutful is right for you?" subtitle="Choose the perfect plan that fits your needs" />

  <!-- Pricing Widget ******************* -->

  <Prices
    classes={{
      header: 'text-center',
      container: '-mt-8 md:-mt-12',
    }}
    prices={[
      {
        title: 'Family',
        subtitle: 'Perfect for parents caring for a single Sprout.',
        price: 15,
        priceYearly: 12,
        period: '/ month',
        periodYearly: ' / month',
        chipBgClass: 'bg-general-blue',
        chipTextClass: 'text-white',
        items: [
          { description: '2 guardians included' },
          { description: 'Unlimited notes & checklists' },
          { description: 'Track behaviors, routines, and medications' },
          { description: 'Export progress reports' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start 7-Day Free Trial',
          href: '#',
        },
      },
      {
        title: 'Team',
        subtitle: 'For multiple clients or larger care networks.',
        price: 35,
        priceYearly: 28,
        period: '/ month',
        periodYearly: ' / month',
        chipBgClass: 'bg-behaviour-purple',
        chipTextClass: 'text-white',
        items: [
          { description: 'All Family features included' },
          { description: 'Invite carers and coordinators' },
          { description: 'Enhanced collaboration tools' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Start 7-Day Free Trial',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: 'Pro',
        subtitle: 'For healthcare professionals and offices.',
        price: 40,
        priceYearly: 35,
        period: '/ client / month',
        periodYearly: '/ client / month',
        chipBgClass: 'bg-incident-pink',
        chipTextClass: 'text-white',
        items: [
          { description: 'All Team features included' },
          { description: 'Access for health professionals' },
          { description: 'Advanced reporting & analytics' },
        ],
        callToAction: {
          href: '/saas',
          text: 'Start 7-Day Free Trial',
          target: '_self',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Why Sproutful is Perfect for You"
    subtitle="Key benefits of our plans designed for parents, carers, and healthcare professionals"
    columns={2}
    items={[
      {
        title: 'Flexible Tiered Plans',
        description: 'Pick the plan that fits your family or care team — from solo parents to large support networks.',
        icon: 'tabler:stairs',
      },
      {
        title: 'Transparent & Simple Pricing',
        description: 'Know exactly what you’re paying for, with no hidden fees — per Sprout, per month.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Data & Payments',
        description: 'All your child’s or client’s information is stored securely, and payments are protected.',
        icon: 'tabler:shield-lock',
      },
      {
        title: 'Instant Access to Tools',
        description: 'Start tracking routines, medications, and behaviors immediately after subscribing.',
        icon: 'tabler:accessible',
      },
      {
        title: 'Upgrade as You Grow',
        description: 'Easily move to higher-tier plans to support larger families or professional care teams.',
        icon: 'tabler:chevrons-up',
      },
      {
        title: 'Support When You Need It',
        description: 'Reach our friendly support team via live chat, email, or phone — every day of the week.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Choosing the right plan is important — here’s everything you need to know about Sproutful’s pricing and subscriptions."
    columns={1}
    items={[
      {
        title: 'Do all plans include support?',
        description:
          'Yes! Every plan includes access to our friendly support team. We’re here to help you set up, manage your Sprouts, and make the most of Sproutful.',
      },
      {
        title: 'Is there a free trial?',
        description:
          'Yes — every plan comes with a 7-day free trial. You can explore all the features and decide if Sproutful is the right fit before being charged.',
      },
      {
        title: 'Can I change or cancel my plan later?',
        description:
          'Absolutely. You can upgrade, downgrade, or cancel your subscription anytime. Your changes will apply at the end of your current billing period.',
      },
      {
        title: 'What payment methods do you accept?',
        description: 'We currently accept major credit and debit cards for all subscriptions.',
      },
      {
        title: 'Are there any extra or hidden fees?',
        description:
          'No — what you see is what you pay. All features listed under each plan are included, with no hidden charges or surprise costs.',
      },
      {
        title: 'Can an organization pay for my plan?',
        description:
          'Yes. If an organization adds you or your Sprout to their network, they can cover your subscription costs on your behalf.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="download"
    title="Download Sproutful today!"
    subtitle="Stay connected with your Sprouts, track routines, and collaborate with your care team — all from one easy-to-use mobile app."
  >
    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </CallToAction>
</Layout>
