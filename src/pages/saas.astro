---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Download from '~/components/widgets/Download.astro';
import Button from '~/components/ui/Button.astro';

import heroImage from '~/assets/images/hero.png';
import TimelineImage from '~/assets/images/timeline.png';
import notes from '~/assets/images/notes.png';

const appStoreDownloadLink = 'https://github.com/arthelokyo/astrowind';
const googlePlayDownloadLink = 'https://github.com/arthelokyo/astrowind';

const metadata = { title: 'Sproutful — Connected care for professionals', ignoreTitleTemplate: true };
---

<Layout metadata={metadata}>
  <Hero
    id="hero"
    image={{
      src: heroImage,
      alt: 'Sproutful platform for managing client care',
      style: 'object-fit: contain; height:auto; max-height:500px; width:100%;',
    }}
  >
    <Fragment slot="title">All the insights you need, all in one place.</Fragment>
    <Fragment slot="subtitle">
      Gain a complete view of clients’ behaviors, goals, and daily routines — track trends, collaborate with carers, and
      support better outcomes.
    </Fragment>
    <div slot="actions" class="flex justify-center gap-4">
      <Button variant="primary" href="/professional">Get Started</Button>
    </div>
  </Hero>

  <Features2
    id="features"
    title="Monitor, Track, and Act"
    subtitle="Support clients efficiently, make informed decisions, and collaborate seamlessly with care teams."
    columns={3}
    items={[
      {
        title: 'Comprehensive Client Data',
        description:
          'See all client behaviors, routines, sleep, meals, mood, and interventions — organized, timestamped, and linked to each client.',
        icon: 'tabler:file-text-filled',
        classes: { icon: 'text-general-blue' },
      },
      {
        title: 'Create & Track Data Points',
        description:
          'Log behaviors, goals, and interventions and track effectiveness over time to guide care plans and maintain accurate documentation.',
        icon: 'tabler:circle-plus-filled',
        classes: { icon: 'text-medication-green' },
      },
      {
        title: 'Seamless Communication',
        description:
          'Share observations, give instructions, and collaborate with carers and team members in real time without delays.',
        icon: 'tabler:message-filled',
        classes: { icon: 'text-info-yellow' },
      },
      {
        title: 'Data Analysis & Insights',
        description:
          'Visualize trends and patterns across client data, spot early warning signs, and make evidence-based adjustments to care plans.',
        icon: 'tabler:graph-filled',
        classes: { icon: 'text-primary' },
      },
      {
        title: 'Reports & Documentation',
        description:
          'Generate professional reports for audits, reviews, or team meetings in seconds, keeping records accurate and up to date.',
        icon: 'tabler:clipboard-data-filled',
        classes: { icon: 'text-behaviour-purple' },
      },
      {
        title: 'Alerts & Notifications',
        description:
          'Get instant updates on important client events or behavior changes to respond quickly and provide proactive support.',
        icon: 'tabler:bell-filled',
        classes: { icon: 'text-incident-pink' },
      },
    ]}
  />

  <!-- Content Widget: Data Collection -->
  <Content
    isFramed
    chip={{
      label: 'Data Collection',
      bgClass: 'bg-behaviour-purple',
      textClass: 'text-white',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: notes,
      alt: 'Dashboard showing incoming client data from carers and family',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'See How it Works', href: '/professional' }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-semibold tracking-tight dark:text-white mb-5">
        Real-time data, recorded effortlessly
      </h3>
      <p class="text-gray-700 dark:text-gray-300 mb-3">
        All client information — behaviors, routines, interventions, and observations — is recorded in real time by
        carers and support staff via the mobile app. Every entry is structured, timestamped, and linked to the relevant
        client record.
      </p>
      <p class="text-gray-700 dark:text-gray-300">
        See a continuously updated view of each client without chasing paper logs. Data is automatically aggregated,
        visualized, and ready for analysis.
      </p>
    </Fragment>
  </Content>

  <!-- Content Widget: Dashboard & Insights -->
  <Content
    isFramed
    isReversed
    chip={{
      label: 'Dashboard',
      bgClass: 'bg-medication-green',
      textClass: 'text-white',
    }}
    frameIcon={{
      name: 'tabler:device-desktop',
      class: 'w-100 h-100 text-medication-green/20',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: TimelineImage,
      alt: 'Dashboard showing client insights, trends, and care network',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'Explore the Dashboard', href: '/professional' }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-semibold tracking-tight dark:text-white mb-5">
        Beautiful dashboard, actionable insights
      </h3>
      <p class="text-gray-700 dark:text-gray-300 mb-3">
        Gain a holistic view of each client’s routines, behaviors, and goals. Visualize trends, identify patterns, and
        make decisions efficiently.
      </p>
      <p class="text-gray-700 dark:text-gray-300">
        Export charts and reports for documentation or sharing — all in just a few clicks.
      </p>
    </Fragment>
  </Content>

  <!-- Content Widget: Client Tracking -->
  <Content
    isFramed
    chip={{
      label: 'Client Tracking',
      bgClass: 'bg-general-blue',
      textClass: 'text-white',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: notes,
      alt: 'Dashboard showing tracked behaviors and routines',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'View Client Insights', href: '/professional' }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-semibold tracking-tight dark:text-white mb-5">
        Access exactly the data you need
      </h3>
      <p class="text-gray-700 dark:text-gray-300 mb-3">
        View all tracked behaviors, routines, and observations for each client. Highlight trends and focus on metrics
        that matter.
      </p>
      <p class="text-gray-700 dark:text-gray-300">
        Information is synced instantly, giving a complete and accurate picture without chasing paperwork or emails.
      </p>
    </Fragment>
  </Content>

  <!-- Content Widget: Collaborate & Act -->
  <Content
    isFramed
    isReversed
    chip={{
      label: 'Collaborate & Act',
      bgClass: 'bg-behaviour-purple',
      textClass: 'text-white',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: notes,
      alt: 'Team collaborating on client logs and interventions',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'Start Using the Dashboard', href: '/professional' }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-semibold tracking-tight dark:text-white mb-5">
        Review, act, and communicate seamlessly
      </h3>
      <p class="text-gray-700 dark:text-gray-300 mb-3">
        Track interventions, review client observations, and communicate with care teams — all in one unified workspace.
      </p>
      <p class="text-gray-700 dark:text-gray-300">
        Notifications, reports, and visualizations ensure you never miss important changes in a client’s behavior or
        routines.
      </p>
    </Fragment>
  </Content>

  <!-- Testimonials -->
  <Testimonials
    title="What Our Users Say"
    testimonials={[
      {
        testimonial:
          'Sproutful allows me to see all client data in one place. I can quickly identify trends and communicate with carers without waiting for meetings.',
        name: 'Dr. Hannah Lee',
        job: 'Clinical Psychologist',
        image: {
          src: 'https://images.unsplash.com/photo-1502767089025-6572583495b2?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Dr. Hannah Lee',
        },
      },
      {
        testimonial:
          'Exporting reports and charts saves me hours of paperwork. My team and I can focus on providing support rather than managing data.',
        name: 'Marcus Tan',
        job: 'Behavior Analyst',
        image: {
          src: 'https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Marcus Tan',
        },
      },
      {
        testimonial:
          'Exporting reports and charts saves me hours of paperwork. My team and I can focus on providing support rather than managing data.',
        name: 'Marcus Tan',
        job: 'Behavior Analyst',
        image: {
          src: 'https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Marcus Tan',
        },
      },
    ]}
  />

  <!-- Download Section -->
  <Download
    title="Start supporting clients smarter today"
    columns={2}
    cards={[
      {
        title: 'Dashboard',
        description:
          'Access all client data, track progress, communicate with carers, and export reports — all in one workspace.',
        icon: 'tabler:device-desktop',
        classes: { icon: 'text-medication-green' },
        buttons: [
          {
            href: 'https://github.com/arthelokyo/astrowind',
            text: 'Try it in your browser',
            variant: 'secondary',
          },
        ],
      },
      {
        title: 'Mobile App',
        description:
          'Stay connected on the go. Track observations, update goals, and collaborate with the care team from your phone or tablet.',
        icon: 'tabler:device-mobile',
        classes: { icon: 'text-general-blue' },
        buttons: [
          {
            href: appStoreDownloadLink,
            text: 'Download for iOS',
            variant: 'secondary',
            icon: 'tabler:brand-apple',
          },
          {
            href: googlePlayDownloadLink,
            text: 'Download for Android',
            variant: 'secondary',
            icon: 'tabler:brand-android',
          },
        ],
      },
    ]}
  />
</Layout>
