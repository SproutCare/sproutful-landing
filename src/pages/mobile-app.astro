---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = 'https://github.com/arthelokyo/astrowind';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://github.com/arthelokyo/astrowind';

import appImage from '~/assets/images/mobile-app2.jpg';
import appImage2 from '~/assets/images/mobile-app3.jpg';
import appImage3 from '~/assets/images/mobile-app5.png';
const metadata = {
  title: 'Mobile App Homepage',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      {...headerData}
      position="left"
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    image={{
      src: appImage3,
      alt: 'Sproutful Hero Image',
    }}
  >
    <Fragment slot="title">
      <span class="text-primary">Sproutful Mobile App</span>: <br /> keeping families and carers connected
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Stay connected with your loved ones and support team in real time. </span>
      Track routines, monitor progress, and manage care — all from your phone.
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <!-- Content Widget **************** -->

  <Content
    isReversed
    title="Everything You Need to Care with Confidence"
    items={[
      {
        title: 'Note Taking',
        description:
          'Keep detailed records of behaviors, meals, medications, sleep patterns, and any incidents — all organized in one easy-to-access place.',
        icon: 'tabler:edit',
      },
      {
        title: 'Checklists',
        description:
          'Set up tasks, medications, and routines with notifications, helping carers stay on track and ensuring Sprouts receive consistent care.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Statistics',
        description:
          'View insightful statistics about each Sprout and the overall care network, helping families track progress and spot trends over time.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Real-time updates',
        description:
          'Receive instant updates from carers and health professionals, keeping everyone in your care network informed and aligned.',
        icon: 'tabler:clock',
      },
    ]}
    image={{
      src: appImage,
      alt: 'Mobile app displaying notes, checklists, and statistics',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Main Features</h3>
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-page"></div>
    </Fragment>
  </Content>

  <Content
    isAfterContent
    items={[
      {
        title: 'Secure Data Storage',
        description:
          'All information is encrypted and safely stored, ensuring privacy while keeping it accessible for authorized family members and carers.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Customizable Notifications',
        description: 'Set reminders for medications, tasks, or routines, so no important care activity is missed.',
        icon: 'tabler:bell',
      },

      {
        title: 'Intuitive Dashboard',
        description:
          'Quickly see the status of all Sprouts in your care, track recent updates, and spot trends at a glance.',
        icon: 'tabler:layout-dashboard',
      },
    ]}
    image={{
      src: appImage2,
      alt: 'Mobile app dashboard with tasks and statistics',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Additional Features</h3>
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-page"></div>
    </Fragment>
  </Content>

  <Steps
    title="A guided journey to better care"
    tagline="Simplified process for families"
    isReversed={true}
    items={[
      {
        title: 'Explore Sproutful plans',
        description: 'Discover our flexible plans and see which one fits your family’s needs best.',
        icon: 'tabler:number-1',
      },
      {
        title: 'Choose the plan that works for you',
        description:
          'Compare features, pricing, and options to pick the plan that provides the right level of support.',
        icon: 'tabler:number-2',
      },
      {
        title: 'Download the app',
        description: 'Get Sproutful from the App Store or Google Play.',
        icon: 'tabler:number-3',
      },
      {
        title: 'Sign up or log in securely',
        description:
          'Create a new account or safely log in to your existing Sproutful account to start managing your family’s routines.',
        icon: 'tabler:number-4',
      },
      {
        title: 'Add your Sprouts',
        description:
          'Set up profiles for your loved ones or clients so you can track behaviors, routines, and medications easily.',
        icon: 'tabler:number-5',
      },
      {
        title: 'Confirm your subscription or give an organization access',
        description:
          'You can subscribe individually, or invite your healthcare professional; they can cover your subscription and access relevant data.',
        icon: 'tabler:number-6',
      },
      {
        title: 'Start tracking, collaborating, and celebrating progress',
        description: "Begin tracking routines, collaborate with carers, and monitor your Sprout's progress over time.",
        icon: 'tabler:number-7',
      },
    ]}
  />

  <CallToAction
    id="pricing"
    title="Flexible Pricing Plans"
    subtitle="Choose the plan that fits your care network — see full details on our Pricing page."
  >
    <div slot="actions" class="flex justify-center">
      <Button variant="primary" href="/pricing"> View Pricing </Button>
    </div>
  </CallToAction>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Sproutful in numbers"
    stats={[
      { amount: '10K+', icon: 'tabler:users' },
      { amount: '25K+', icon: 'tabler:check' },
      { amount: '5K+', icon: 'tabler:star' },
    ]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What our users say"
    testimonials={[
      {
        testimonial: `Sproutful has completely changed how I keep track of my son's daily routines. I can see his progress at a glance, and our carers are all updated in real time — it’s a lifesaver!`,
        name: 'Bec Harrison',
        job: 'Parent',
        image: {
          src: 'https://images.unsplash.com/photo-1607746882042-944635dfe10e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Bec Harrison Image',
        },
      },
      {
        testimonial: `As a full-time carer, Sproutful keeps me organized and ensures I never miss a task for any of the Sprouts I look after. Notifications and checklists are perfect for staying on top of everything.`,
        name: 'Tom Reynolds',
        job: 'Carer',
        image: {
          src: 'https://images.unsplash.com/photo-1607746882042-944635dfe10e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Tom Reynolds Image',
        },
      },
      {
        testimonial: `I love how Sproutful lets me track my daughter’s routines, medications, and milestones all in one app. It's simple to use and keeps the whole family aligned and informed.`,
        name: 'Lara Chen',
        job: 'Parent',
        image: {
          src: 'https://images.unsplash.com/photo-1607746882042-944635dfe10e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Lara Chen Image',
        },
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'Read more testimonials',
      href: '#', // replace with actual link if available
      icon: 'tabler:chevron-right',
    }}
  />

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'Who can use Sproutful?',
        description:
          'Sproutful is designed for families and carers to collaboratively support Sprouts — your loved ones — in their daily routines and care activities.',
      },
      {
        title: 'How do I track my Sprout’s routines?',
        description:
          'Use Sproutful’s checklists, logs, and notifications to track tasks, behaviors, medications, and milestones. Updates are instantly shared across your care network.',
      },
      {
        title: 'Can multiple carers collaborate?',
        description:
          'Yes! You can invite family members, support workers, and coordinators to join your Sprout’s care network so everyone stays connected and up to date.',
      },
      {
        title: 'Is my data secure?',
        description:
          'Absolutely. Sproutful encrypts all data and restricts access to authorized users only, keeping your family’s information private and safe.',
      },
      {
        title: 'Is there a cost?',
        description:
          'Sproutful offers a 7-day free trial for all new users. After that, you can continue your subscription to keep enjoying full access to every feature.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="download"
    title="Download Sproutful today!"
    subtitle="Stay connected with your Sprouts, track routines, and collaborate with your care team — all from one easy-to-use mobile app."
  >
    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </CallToAction>
</Layout>
