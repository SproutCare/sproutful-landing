---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = 'https://github.com/arthelokyo/astrowind';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://github.com/arthelokyo/astrowind';

import appImage from '~/assets/images/mobile-app2.jpg';
import appImage2 from '~/assets/images/mobile-app3.jpg';

const metadata = {
  title: 'Mobile App Homepage',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      {...headerData}
      position="left"
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    image={{
      src: 'https://images.unsplash.com/photo-1535303311164-664fc9ec6532?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Sproutful Hero Image',
    }}
  >
    <Fragment slot="title">
      <span class="text-primary">Sproutful Mobile App</span>: <br /> keeping families and carers connected
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Stay connected with your loved ones and support team in real time. </span>
      Track routines, monitor progress, and manage care — all from your phone.
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Note Taking',
        description:
          'Keep detailed records of behaviors, meals, medications, sleep patterns, and any incidents — all organized in one easy-to-access place.',
        icon: 'tabler:edit',
      },
      {
        title: 'Checklists',
        description:
          'Set up tasks, medications, and routines with notifications, helping carers stay on track and ensuring Sprouts receive consistent care.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Statistics',
        description:
          'View insightful statistics about each Sprout and the overall care network, helping families track progress and spot trends over time.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Real-time updates',
        description:
          'Receive instant updates from carers and health professionals, keeping everyone in your care network informed and aligned.',
        icon: 'tabler:clock',
      },
    ]}
    image={{
      src: appImage,
      alt: 'Mobile app displaying notes, checklists, and statistics',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Main Features</h3>
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-bg-secondary"></div>
    </Fragment>
  </Content>

  <Content
    isAfterContent
    items={[
      {
        title: 'Secure Data Storage',
        description:
          'All information is encrypted and safely stored, ensuring privacy while keeping it accessible for authorized family members and carers.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Customizable Notifications',
        description: 'Set reminders for medications, tasks, or routines, so no important care activity is missed.',
        icon: 'tabler:bell',
      },

      {
        title: 'Intuitive Dashboard',
        description:
          'Quickly see the status of all Sprouts in your care, track recent updates, and spot trends at a glance.',
        icon: 'tabler:layout-dashboard',
      },
    ]}
    image={{
      src: appImage2,
      alt: 'Mobile app dashboard with tasks and statistics',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Additional Features</h3>
    </Fragment>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-bg-secondary"></div>
    </Fragment>
  </Content>

  <Features3
    id="features"
    title="Getting Started with Sproutful"
    subtitle="Sproutful makes connecting families, carers, and health professionals simple — track routines, log tasks, and stay informed, all from one app."
    tagline="Step-by-step guide"
    columns={2}
    items={[
      {
        title: 'Download the app',
        description: `Get Sproutful from the App Store or Google Play and install it on your device to begin managing your Sprouts.`,
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Create your account',
        description:
          'Sign up as a family member or support worker to manage your care network and access Sproutful features.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'Add your Sprouts',
        description:
          'Create profiles for your loved ones so their routines, tasks, and progress can be tracked in one place.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Invite carers and organizations',
        description:
          'Bring support workers, coordinators, and health professionals into the network so everyone stays informed and aligned.',
        icon: 'tabler:square-number-4',
      },
      {
        title: 'Collaborate and monitor progress',
        description:
          'Use checklists, logs, and updates to track care routines and milestones in real time, keeping the whole network connected.',
        icon: 'tabler:square-number-5',
      },
      {
        title: 'Level Up Together',
        description:
          'Every completed task or milestone is a step forward — grow, learn, and level up as a team with your Sprouts!',
        icon: 'tabler:rocket',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1521517407911-565264e7d82d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2069&q=80',
      alt: 'Mobile app showing Sprout profiles and care network',
    }}
  />
  <!-- Stats Widget ****************** -->

  <Stats
    title="Sproutful in numbers"
    stats={[
      { amount: '10K+', icon: 'tabler:users' },
      { amount: '25K+', icon: 'tabler:check' },
      { amount: '5K+', icon: 'tabler:star' },
    ]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What our users say"
    testimonials={[
      {
        testimonial: `Sproutful has completely changed how I keep track of my son's daily routines. I can see his progress at a glance, and our carers are all updated in real time — it’s a lifesaver!`,
        name: 'Bec Harrison',
        job: 'Parent',
        image: {
          src: 'https://images.unsplash.com/photo-1607746882042-944635dfe10e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Bec Harrison Image',
        },
      },
      {
        testimonial: `As a full-time carer, Sproutful keeps me organized and ensures I never miss a task for any of the Sprouts I look after. Notifications and checklists are perfect for staying on top of everything.`,
        name: 'Tom Reynolds',
        job: 'Carer',
        image: {
          src: 'https://images.unsplash.com/photo-1607746882042-944635dfe10e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Tom Reynolds Image',
        },
      },
      {
        testimonial: `I love how Sproutful lets me track my daughter’s routines, medications, and milestones all in one app. It's simple to use and keeps the whole family aligned and informed.`,
        name: 'Lara Chen',
        job: 'Parent',
        image: {
          src: 'https://images.unsplash.com/photo-1607746882042-944635dfe10e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
          alt: 'Lara Chen Image',
        },
      },
    ]}
    callToAction={{
      target: '_blank',
      text: 'Read more testimonials',
      href: '#', // replace with actual link if available
      icon: 'tabler:chevron-right',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'Who can use Sproutful?',
        description:
          'Sproutful is designed for families, carers, and health professionals to collaboratively support Sprouts — your loved ones — in their daily routines.',
      },
      {
        title: 'How do I track my Sprout’s routines?',
        description:
          'Use the app’s checklists, logs, and notifications to track tasks, behaviors, medications, and milestones. Updates are visible to everyone in your care network.',
      },
      {
        title: 'Can multiple carers collaborate?',
        description:
          'Yes! Invite family members, support workers, coordinators, and health professionals to join your Sprout’s care network. Everyone stays informed and aligned.',
      },
      {
        title: 'Is my data secure?',
        description:
          'Absolutely. Sproutful encrypts all data and provides secure access controls to ensure privacy for families and Sprouts.',
      },
      {
        title: 'Is there a cost?',
        description:
          'Sproutful offers a free tier for families and carers. Certain premium features or organization access may require a subscription.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="download"
    title="Download Sproutful today!"
    subtitle="Stay connected with your Sprouts, track routines, and collaborate with your care team — all from one easy-to-use mobile app."
  >
    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </CallToAction>
</Layout>
