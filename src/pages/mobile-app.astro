---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import { headerData } from '~/navigation';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const appStoreImg = '~/assets/images/app-store.png';
const appStoreDownloadLink = 'https://github.com/arthelokyo/astrowind';

const googlePlayImg = '~/assets/images/google-play.png';
const googlePlayDownloadLink = 'https://github.com/arthelokyo/astrowind';

import heroImage from '~/assets/images/hero.png';
import notes from '~/assets/images/notes.png';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Mobile App Homepage',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      {...headerData}
      position="left"
      actions={[
        {
          variant: 'secondary',
          text: 'Login',
          href: '#',
        },
        {
          variant: 'primary',
          text: 'Sign Up',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero Widget ******************* -->

  <Hero
    image={{
      src: heroImage,
      alt: 'Sproutful app preview',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
  >
    <Fragment slot="title">Everything You Need to Care with Confidence.</Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Stay connected with your loved ones and support team in real time. </span>
      Track routines, monitor progress, and manage care — all from your phone.
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </Hero>

  <Features2
    isReversed
    title="Tools to Track, Share, and Support"
    subtitle="Sproutful keeps everyone on the same page with real-time updates, shared care networks, and actionable insights."
    items={[
      {
        title: 'Behaviors, Meals & Wellness',
        description: 'Log behaviors, meals, sleep, and incidents together to see daily routines and identify patterns.',
        icon: 'tabler:file-text-filled',
        classes: { icon: 'text-behaviour-purple' },
      },
      {
        title: 'Stay in the Loop',
        description:
          'Attach photos, videos, and notes to each entry so you can see progress firsthand and keep everyone accountable.',
        icon: 'tabler:binoculars-filled',
        classes: { icon: 'text-general-blue' },
      },
      {
        title: 'Goals & Observations',
        description: 'Document progress toward plans and daily goals, and share updates across the care network.',
        icon: 'tabler:target',
        classes: { icon: 'text-incident-pink' },
      },
      {
        title: 'Tasks, Medications & Reminders',
        description: 'Set recurring tasks, medications, and reminders to stay organized and on track.',
        icon: 'tabler:bell-ringing-2-filled',
        classes: { icon: 'text-medication-green' },
      },
      {
        title: 'Shared Care Network',
        description: 'Connect family, carers, and professionals in one secure space for consistent communication.',
        icon: 'tabler:message-filled',
        classes: { icon: 'text-info-yellow' },
      },
      {
        title: 'Data & Insights',
        description: 'Track trends over time to see what works, spot patterns, and inform decisions.',
        icon: 'tabler:graph-filled',
        classes: { icon: 'text-primary' },
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <!-- Feature: Notes & Records -->
  <Content
    isFramed
    chip={{
      label: 'Record',
      bgClass: 'bg-behaviour-purple',
      textClass: 'text-white',
    }}
    frameIcon={{
      name: 'tabler:notes',
      class: 'w-100 h-100 text-info-yellow/20',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: notes,
      alt: 'Mobile app showing note-taking for behaviors and daily logs',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'Start tracking today', href: '/pricing' }}
  >
    <Fragment slot="content">
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-semibold tracking-tight dark:text-white mb-5">
        Stay on top of every moment
      </h3>
      <p class="text-gray-700 dark:text-gray-300">
        Log behaviors, routines, and milestones effortlessly — everything organized, searchable, and shared with your
        care network in real time.
      </p>
    </Fragment>
  </Content>

  <Content
    isFramed
    isReversed
    chip={{
      label: 'Collaborate',
      bgClass: 'bg-medication-green',
      textClass: 'text-white',
    }}
    frameBgClass="bg-bg-secondary"
    image={{
      src: notes,
      alt: 'Mobile notifications and updates feed',
      style: 'object-fit: contain; height: auto; max-height: 500px; width: 100%;',
    }}
    callToAction={{ text: 'Get connected today', href: '/pricing' }}
  >
    <Fragment slot="content">
